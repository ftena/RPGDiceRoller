<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	android:versionName="2.2" android:versionCode="7" package="com.tarlic.RPGDiceRoller">

<uses-sdk android:minSdkVersion="7" 
          android:targetSdkVersion="17"
          android:maxSdkVersion="17" />

	<application android:label="@string/app_name" android:icon="@drawable/ic_launcher"
	    android:allowBackup="true">
	
		<!--
			Por cada Activity instanciada durante la ejecución de la aplicación,
			es necesario un <activity> ... </activity>
		-->

		<activity android:name=".RPGDiceRoller" android:label="@string/app_name" android:theme="@style/AppBaseTheme">
		
				<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		
		</activity>
		
		<activity android:name=".LogView" android:label="@string/activity_log_view" android:theme="@style/AppBaseTheme"></activity>

	</application>

        
</manifest> 


