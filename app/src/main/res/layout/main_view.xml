                style="@style/ColumnTitleTheme"
                android:text="@string/header_plus_minus" />

            <TextView
                android:id="@+id/TextView02"
                style="@style/ColumnTitleTheme"
                android:text="@string/header_modifier" />

            <TextView
                android:id="@+id/TextView01"
                style="@style/ColumnTitleTheme" />

            <TextView
                android:id="@+id/TextView00"
                style="@style/ColumnTitleTheme"
                android:text="@string/header_results" />
        </TableRow>

