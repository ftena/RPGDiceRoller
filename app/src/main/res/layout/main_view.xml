        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView android:text="@string/d2text" android:gravity="center" />
            <EditText android:id="@+id/EditTextNumberD2" style="@style/InputEditText" />
            <ImageButton android:id="@+id/ButtonPlusMinusD2" style="@style/ButtonPlusMinus" />
            <EditText android:id="@+id/EditTextModifierD2" style="@style/InputEditText" />
            <ImageButton android:id="@+id/ButtonRollD2" style="@style/ButtonRoll" />
            <EditText android:id="@+id/EditTextResultsD2" style="@style/InputEditText.OutputEditText" />
